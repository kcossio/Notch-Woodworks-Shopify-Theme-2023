    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image",
      "info": "Upload an image to use as a banner for this page"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}  
{% endschema %}

