<div id="{{ section.settings.id }}" class="anchor-point" data-name="{{ section.settings.title }}">Anchor Link</div>

{% schema %}
  {
  "name": "Page Anchor Point",
  "class": "section anchor-point-container nopad",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Add an anchor link to this product. If there is a sticky Add to Cart menu then the menu will be generated by any anchor point sections you add."
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "info": "Enter the title of this section, which will be used to generate the label for menu item."
    },
    {
      "type": "text",
      "id": "id",
      "label": "ID",
      "info": "Enter an ID for this section, which will allow a link directly to this section"
    }
  ],
  "presets": [
    {
      "name": "Page Anchor Point"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}  
{% endschema %}

